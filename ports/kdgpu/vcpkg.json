{
  "name": "kdgpu",
  "version": "0.10.0",
  "description": "KDGpu Library - C++ Vulkan wrapper for GPU programming",
  "homepage": "https://github.com/KDAB/kdgpu",
  "license": "MIT",
  "supports": "(windows | linux | android | osx) & (arm | x86 | x64)",
  "builtin-baseline": "faf665cf8aca288b636d9de887f5cdfa3cff1a9e",
  "dependencies": [
    {
      "name": "spdlog",
      "version>=": "1.15.2"
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    {
      "name": "vulkan-memory-allocator",
      "version>=": "3.3.0"
    }
  ],
  "features": {
    "examples": {
      "description": "Build examples",
      "dependencies": [
        {
          "name": "glm",
          "version>=": "1.0.2"
        },
        {
          "name": "imgui",
          "features": [
            "vulkan-binding"
          ],
          "version>=": "1.91.9"
        },
        {
          "name": "stb",
          "version>=": "2024-07-29#1"
        }
      ]
    },
    "hlsl": {
      "description": "Enable HLSL shader support"
    },
    "kdgpukdgui": {
      "description": "Enable KDGui integration",
      "dependencies": [
        {
          "name": "kdutils",
          "version>=": "0.1.12"
        }
      ]
    },
    "kdgpuutils": {
      "description": "Build KDGpuUtils utility library",
      "dependencies": [
        {
          "name": "kdutils",
          "version>=": "0.1.12"
        }
      ]
    },
    "openxr": {
      "description": "Enable OpenXR support for VR/AR",
      "dependencies": [
        {
          "name": "kdbindings",
          "version>=": "1.1.0"
        },
        {
          "name": "openxr-loader",
          "version>=": "1.1.45"
        }
      ]
    },
    "testing": {
      "description": "Enable testing support",
      "dependencies": [
        {
          "name": "doctest",
          "version>=": "2.4.9"
        },
        {
          "name": "kdutils",
          "version>=": "0.1.12"
        }
      ]
    }
  }
}
